problem - https://www.codechef.com/problems/BESTMOVIE?tab=statement


#include <bits/stdc++.h>
using namespace std;

int main() {
	int T;
  
   cin>>T;
   
   for(int i=1;i<=T;i++){
       int n;
   
       cin>>n;
       int mini=INT_MAX;
       for(int i=0;i<n;i++){
           int A, B;
           cin>>A>>B;
           if(A>=7){
               if(B<mini){
                   mini=B;
               }
           }
       }
       if(mini==INT_MAX){
            cout<< -1<<endl;
       }
       else{
          cout<<mini<<endl; 
       }
       
   }

}
